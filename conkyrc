${color1}Last backup: ${color2}${execpi 60 cat .last_backup} ${alignr}${wireless_link_qual_perc wlan0}% ${wireless_essid wlan0}
${color2}$hr
${color1}/    :${color2}${fs_free /} ${fs_bar 5,175 /} ${alignr}${fs_bar 5,175 /home/valdor} ${color1}/home:${color2}${fs_free /home/valdor}
${color2}$hr
