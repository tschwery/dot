# XMPP identifier and server config
source ~/.mcabber/account.mc

# Ressource configuration
set resource = mcabber
set disable_random_resource = 0
set priority = 5
set priority_away = 0

# Keepalive
#set pinginterval = 40

# Language
# values: en, cs, de, fr, it, nl, pl, ru, uk. If you omit this,
set lang = en

# Aspell
set spell_enable = 1
set spell_lang = fr_CH
set spell_encoding = UTF-8

# Command Line History
set cmdhistory_lines = 25

# Roster filter
# ([o]nline, [f]ree_for_chat, [d]o_not_disturb, [n]ot_available,
# [a]way, [_]offline).
set roster_display_filter = ofdna_
set ignore_self_presence = 1

# Typing notifications, Chat States, Events (XEP-22/85)
#set disable_chatstates = 0

# History logging
set logging = 1
set load_logs = 1
set logging_dir = ~/.mcabber/histo/
set logging_ignore_status = 1
set max_history_age = 30
set max_history_blocks = 0

# MUC chatrooms logging
#set log_muc_conf = 1
